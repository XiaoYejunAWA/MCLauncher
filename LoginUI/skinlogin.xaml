<Page x:Class="MCLauncher.LoginUI.skinlogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MCLauncher.LoginUI"
      mc:Ignorable="d"
      d:DesignHeight="200" d:DesignWidth="200"
      Title="skinlogin">

    <Grid>
        <TextBox x:Name="Uri" Width="180" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" />
        <TextBox x:Name="username" Width="180" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" />
        <PasswordBox x:Name="password" Width="180" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" />
        <Button Content="登录" Width="50" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="Button_Click"></Button>
    </Grid>
</Page>